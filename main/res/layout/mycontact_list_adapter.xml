<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/mycontact_img"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="8dp"
        android:src="@drawable/ic"
        />
    <TextView
        android:id="@+id/mycontact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/mycontact_img"
        android:text="Ali Hasanzadeh"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:textSize="15sp"
        android:fontFamily="casual"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/mycontact_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/mycontact_img"
        android:layout_below="@id/mycontact_name"
        android:text="09123456789"
        android:layout_marginTop="10dp"
        android:textColor="#6c6464"
        android:textSize="13sp"
        android:fontFamily="casual"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/mycontact_name"
        android:layout_alignParentRight="true"
        >



    <ImageView
        android:id="@+id/img_sms"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/red"
        android:layout_marginRight="8dp"
        />
    <ImageView
        android:id="@+id/img_call"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/yellow"
        />

    </LinearLayout>

</RelativeLayout>

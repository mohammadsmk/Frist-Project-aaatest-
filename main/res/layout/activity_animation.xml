<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mohammad.aaatest.L2_Animation.Animation">


    <ImageView
        android:id="@+id/picone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/picone"
        android:foregroundGravity="center"
        android:layout_marginTop="20dp"
        android:alpha="1"

        >
    </ImageView>

    <ImageView
        android:id="@+id/pictwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/pictwo"
        android:foregroundGravity="center"
        android:layout_marginTop="20dp"
        android:alpha="0">

    </ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        >
    <ImageView
        android:id="@+id/picthree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic">
    </ImageView>
        <ImageView
            android:id="@+id/picfour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic">
        </ImageView>
        <ImageView
            android:id="@+id/picfive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic">
        </ImageView>
        <ImageView
            android:id="@+id/picsix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic">
        </ImageView>
    </LinearLayout>
</RelativeLayout>
